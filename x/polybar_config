menu-2-1-foreground = ${{colors.white}}
menu-2-1-background = ${{colors.skin-light}}
menu-2-1-exec = menu-open-0

[module/tomatoscript]
type = custom/script
exec = $HOME/bin/tomato-timer
tail = true
click-left = $HOME/bin/tomato-timer 25
click-right = $HOME/bin/tomato-timer 5
click-middle = $HOME/bin/tomato-timer 15
format = <label>
format-background = ${{colors.background-light}}

[module/rofi]
type = custom/script
exec = echo -e " \uF002 "
click-left = "rofi -modi drun,run,window -show drun -theme $HOME/.cache/wal/rofi_theme.rasi"
format = <label>
format-foreground = ${{colors.white}}
format-background = ${{colors.skin-light}}

[module/toggl]
type = custom/script
exec = $HOME/bin/toggl_tools/toggl_cli.py -p
format = " <label>"
format-foreground = ${{colors.foreground-light}}
format-background = ${{colors.background-light}}
label-foreground = ${{colors.foreground-dark}}
interval = 30
click-left = "toggl stop"

