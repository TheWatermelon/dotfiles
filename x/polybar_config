[module/battery]
type = internal/battery
battery = BAT0
adapter = ADP1
full-at = 99

; If an inotify event haven't been reported in this many
; seconds, manually poll for new values.
;
; Needed as a fallback for systems that don't report events
; on sysfs/procfs.
;
; Disable polling by setting the interval to 0.
;
; Default: 5
poll-interval = 5

time-format = %H:%M

; Available tokens:
;   %percentage% (default)
;   %time%
;   %consumption% (shows current charge rate in watts)
label-charging = " (%time%)"
label-charging-foreground = ${{colors.foreground-dark}}
label-charging-background = ${{colors.background-light}}
; Available tags:
;   <label-charging> (default)
;   <bar-capacity>
;   <ramp-capacity>
;   <animation-charging>
format-charging = <animation-charging><label-charging>

label-discharging = " %percentage%%"
label-discharging-foreground = ${{colors.foreground-dark}}
label-discharging-background = ${{colors.background-light}}
; Available tags:
;   <label-discharging> (default)
;   <bar-capacity>
;   <ramp-capacity>
format-discharging = <ramp-capacity><label-discharging>
format-discharging-background = ${{colors.background-light}}

label-full = 
format-full = <label-full>
format-full-foreground = #30dc16
format-full-background = ${{colors.background-light}}

ramp-capacity-0 = 
ramp-capacity-0-foreground = #dc3016
ramp-capacity-0-background = ${{colors.background-light}}
ramp-capacity-1 = 
ramp-capacity-1-foreground = #dca016
ramp-capacity-1-background = ${{colors.background-light}}
ramp-capacity-2 = 
ramp-capacity-2-foreground = #dcdc16
ramp-capacity-2-background = ${{colors.background-light}}
ramp-capacity-3 = 
ramp-capacity-3-foreground = #a0dc16
ramp-capacity-3-background = ${{colors.background-light}}
ramp-capacity-4 = 
ramp-capacity-4-foreground = #30dc16
ramp-capacity-4-background = ${{colors.background-light}}

animation-charging-0 = 
animation-charging-1 = 
animation-charging-2 = 
animation-charging-3 = 
animation-charging-4 = 
animation-charging-foreground = #30dc16
animation-charging-background = ${{colors.background-light}}
animation-charging-framerate = 750

[module/powermenu]
type = custom/menu

expand-right = true

format-spacing = 0

