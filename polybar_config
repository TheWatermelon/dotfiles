[module/battery]
type = internal/battery
battery = BAT0
adapter = ADP1
full-at = 99

; If an inotify event haven't been reported in this many
; seconds, manually poll for new values.
;
; Needed as a fallback for systems that don't report events
; on sysfs/procfs.
;
; Disable polling by setting the interval to 0.
;
; Default: 5
poll-interval = 5

time-format = %H:%M

; Available tokens:
;   %percentage% (default)
;   %time%
;   %consumption% (shows current charge rate in watts)
label-charging = (%time%)
label-charging-foreground = ${colors.foreground-alt}
; Available tags:
;   <label-charging> (default)
;   <bar-capacity>
;   <ramp-capacity>
;   <animation-charging>
format-charging = <animation-charging> <label-charging>
;format-charging-underline = #30dc16

label-discharging = (%time%)
label-discharging-foreground = ${colors.foreground-alt}
format-discharging-prefix-foreground = ${colors.foreground-alt}
; Available tags:
;   <label-discharging> (default)
;   <bar-capacity>
;   <ramp-capacity>
format-discharging = <ramp-capacity> <label-discharging>
;format-discharging-underline = #dcdc16

label-full = 
format-full = <label-full>
format-full-foreground = #30dc16
;format-full-prefix-foreground = ${colors.foreground-alt}
;format-full-underline = ${self.format-charging-underline}

bar-capacity-width = 5
bar-capacity-indicator = |
bar-capacity-indicator-font = 2
bar-capacity-fill = ―
bar-capacity-fill-font = 2
bar-capacity-empty = ―
bar-capacity-empty-font = 2
bar-capacity-empty-foreground = ${colors.foreground-alt}

ramp-capacity-0 = 
ramp-capacity-0-foreground = #dc3016
ramp-capacity-1 = 
ramp-capacity-1-foreground = #dca016
ramp-capacity-2 = 
ramp-capacity-2-foreground = #dcdc16
ramp-capacity-3 = 
ramp-capacity-3-foreground = #a0dc16
ramp-capacity-4 = 
ramp-capacity-4-foreground = #30dc16

animation-charging-0 = 
animation-charging-1 = 
animation-charging-2 = 
animation-charging-3 = 
animation-charging-4 = 
animation-charging-foreground = #30dc16
animation-charging-framerate = 750

[module/temperature]
type = internal/temperature
